<div class="main">
  <% @blogs.each do |blog| %>
    <div class="blog-title">
      <%= blog.title %>
    </div>
    <div class="blog-text">
      <%= simple_format(blog.text) %>
    </div>
    <div class="btns">
      <div class="btn">
        <%= link_to 'ブログを見る',"/blogs/#{blog.id}", method: :get %>
      </div>
      <% if user_signed_in? && current_user.id == blog.user_id %>
      <div class="btn">
        <%= link_to '編集',"/blogs/#{blog.id}/edit", method: :get %>
      </div>
      <div class="btn">
        <%= link_to '削除', "/blogs/#{blog.id}", method: :delete %>
      </div>
      <% end %>
    </div>
    <% end %>
    
    <div class="paginate">
    <%= paginate(@blogs) %>
    </div>
</div>